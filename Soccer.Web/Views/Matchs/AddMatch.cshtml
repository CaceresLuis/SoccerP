@model Soccer.Web.Models.MatchViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add</h2>

<h4>Match to group: @Model.Group.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMatch" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GroupId" />

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LocalId" class="control-label"></label>
                <select asp-for="LocalId" asp-items="Model.Teams" class="form-control"></select>
                <span asp-validation-for="LocalId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VisitorId" class="control-label"></label>
                <select asp-for="VisitorId" asp-items="Model.Teams" class="form-control"></select>
                <span asp-validation-for="VisitorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsClosed" /> @Html.DisplayNameFor(model => model.IsClosed)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <a asp-controller="Groups" asp-action="DetailsGroup" asp-route-id="@Model.GroupId" class="btn btn-default">
                    <i class="glyphicon glyphicon-hand-left"></i> Back
                </a>
                <button type="submit" value="Create" class="btn btn-primary">
                    <i class="glyphicon glyphicon-save"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
