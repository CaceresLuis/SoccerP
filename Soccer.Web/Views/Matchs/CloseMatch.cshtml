@model Soccer.Web.Models.CloseMatchViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Close Match</h2>

<h4>Match in group: @Model.Group.Name</h4>
<hr />
<form asp-action="CloseMatch" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="GroupId" />
    <input type="hidden" asp-for="MatchId" />
    <input type="hidden" asp-for="LocalId" />
    <input type="hidden" asp-for="VisitorId" />

    <div class="row">
        <div class="col-md-2">
            @if (!string.IsNullOrEmpty(Model.Local.LogoPath))
            {
                <img src="@Url.Content(Model.Local.LogoPath)" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />
            }
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="GoalsLocal" class="control-label"></label>
                <input asp-for="GoalsLocal" placeholder="@Model.GoalsLocal" class="form-control" />
                <span asp-validation-for="GoalsLocal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GoalsVisitor" class="control-label"></label>
                <input asp-for="GoalsVisitor" placeholder="@Model.GoalsVisitor" class="form-control" />
                <span asp-validation-for="GoalsVisitor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-controller="Groups" asp-action="DetailsGroup" asp-route-id="@Model.GroupId" class="btn btn-default">
                    <i class="glyphicon glyphicon-hand-left"></i> Back
                </a>
                <button type="submit" value="CloseMatch" class="btn btn-primary">
                    <i class="glyphicon glyphicon-save"></i> Close Match
                </button>
            </div>
        </div>
        <div class="col-md-2">
            @if (!string.IsNullOrEmpty(Model.Visitor.LogoPath))
            {
                <img src="@Url.Content(Model.Visitor.LogoPath)" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />
            }
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}