@model Soccer.Web.Models.GroupViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Group to tournament: @Model.Tournament.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrUpdateGroup" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TournamentId" />
            <input type="hidden" name="isNew" id="isNew" value="True" />

            <partial name="_Group" />

            <div class="form-group">
                <a asp-controller="Tournaments" asp-action="Details" asp-route-id="@Model.TournamentId" class="btn btn-default">
                    <i class="glyphicon glyphicon-hand-left"></i> Back
                </a>
                <button type="submit" value="Create" class="btn btn-primary">
                    <i class="glyphicon glyphicon-save"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
